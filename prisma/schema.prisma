generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  name                String?
  email               String               @unique
  emailVerified       DateTime?
  image               String?
  password            String?
  role                UserRole             @default(PATIENT)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  profiles            Profile?
  psychologistProfile PsychologistProfile?
  patientAppointments      Appointment[] @relation("PatientAppointments")
  
  @@map("users")
}

model Appointment {
  id              String            @id @default(uuid())
  patientId       String            @map("patient_id")
  psychologistId  String            @map("psychologist_id")
  scheduledAt     DateTime          @map("scheduled_at")
  durationMinutes Int               @default(50) @map("duration_minutes")
  status          AppointmentStatus @default(SCHEDULED)
  price           Decimal           @db.Decimal(10, 2)
  meetingUrl      String?           @map("meeting_url")
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  patient      User                @relation("PatientAppointments", fields: [patientId], references: [id])
  psychologist PsychologistProfile @relation(fields: [psychologistId], references: [id])

  @@index([patientId])
  @@index([psychologistId])
  @@index([scheduledAt])
  @@map("appointments")
}



model Profile {
  id         String    @id @default(uuid())
  fullName   String?   @map("full_name")
  avatarUrl  String?   @map("avatar_url")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  birth_date DateTime? @db.Date
  document   String?
  phone      String?
  role       UserRole  @default(PATIENT)
  user_id    String    @unique
  users      User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model PsychologistProfile {
  id                   String   @id @default(uuid())
  userId               String   @unique
  crp                  String?  @unique
  bio                  String?
  specialties          String[] @default([])
  pricePerSession      Decimal? @map("price_per_session") @db.Decimal(10, 2)
  videoPresentationUrl String?  @map("video_presentation_url")
  isVerified           Boolean  @default(false) @map("is_verified")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")
  
  weeklySchedule       Json?    @map("weekly_schedule")
  timezone             String   @default("America/Sao_Paulo")
  
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments         Appointment[]
  scheduleOverrides    ScheduleOverride[]

  @@map("psychologist_profiles")
}

model ScheduleOverride {
  id              String             @id @default(uuid())
  psychologistId  String             @map("psychologist_id")
  date            String             // Format YYYY-MM-DD
  type            String             // 'blocked' | 'custom'
  slots           Json               // Array of { start, end }
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")

  psychologist    PsychologistProfile @relation(fields: [psychologistId], references: [id], onDelete: Cascade)

  @@unique([psychologistId, date])
  @@map("schedule_overrides")
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
}

enum UserRole {
  PATIENT
  PSYCHOLOGIST
  COMPANY
  ADMIN
}
